<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/app_start_background"
    tools:context=".signup_page.SignUpPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Signup"
            android:textColor="#FF3D00"
            android:textColorHighlight="#F2450F"
            android:textColorLink="#FF5722"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/nav_header_desc"
                app:cardBackgroundColor="#FFFDFD"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/userimg_id"
                    android:layout_width="90dp"
                    android:layout_height="89dp"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    app:srcCompat="@drawable/ic_baseline_account_circle_24" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#4A4848"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/userImgBtn_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/text_box_background"
            android:textColorHint="@color/black"
            app:endIconDrawable="@drawable/ic_baseline_cancel_24"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:endIconTintMode="multiply"
            app:hintTextColor="@color/black"
            app:passwordToggleDrawable="@drawable/ic_baseline_cancel_24"
            app:passwordToggleEnabled="true"
            app:prefixTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:startIconDrawable="@drawable/ic_baseline_markunread_24"
            app:startIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_box_background"
                android:hint="@string/Email_ID"
                android:textColor="#0A0606"
                android:textColorHint="#110909" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_box_background"
            android:textColorHint="@color/black"
            app:endIconDrawable="@drawable/ic_baseline_cancel_24"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:hintTextColor="#1E1616"
            app:startIconDrawable="@drawable/ic_baseline_person_add_alt_1_24"
            app:startIconTint="#030202">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NewuserName_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_box_background"
                android:freezesText="false"
                android:hint="@string/Username"
                android:inputType="textPersonName"
                android:textColor="#110909"
                android:textColorHint="#090D0E" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_box_background"
            android:textColorHint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black"
            app:passwordToggleTint="#000000"
            app:startIconDrawable="@drawable/ic_baseline_lock_open_24"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/text_box_background"
                android:hint="@string/PasswordloginPage"
                android:inputType="textPassword"
                android:textColor="#150D0D"
                android:textColorHint="#37474F" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/text_box_background"
            android:textColorHint="@color/black"
            app:endIconDrawable="@drawable/ic_baseline_cancel_24"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_box_background"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColor="#0A0606"
                android:textColorHint="#37474F" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/agree_terms_and_condition"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:buttonIcon="@android:drawable/checkbox_on_background" />

        <Button
            android:id="@+id/add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3F51B5"
            android:text="@string/add_me"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gologin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/Go_to_login"
            android:textColor="#FF3D00"
            android:textSize="24sp" />
    </LinearLayout>


</ScrollView>